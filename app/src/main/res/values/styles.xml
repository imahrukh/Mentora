<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Mentora" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnSurface</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/colorSecondaryVariant</item>
        
        <!-- Other attributes -->
        <item name="materialCardViewStyle">@style/Widget.Mentora.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.Mentora.BottomNavigationView</item>
        <item name="toolbarStyle">@style/Widget.Mentora.Toolbar</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.Mentora.Splash" parent="Theme.Mentora">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Custom widget styles -->
    <style name="Widget.Mentora.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/primaryColor</item>
    </style>
    
    <style name="Widget.Mentora.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/colorSurface</item>
        <item name="itemIconTint">@color/primaryColor</item>
        <item name="itemTextColor">@color/primaryColor</item>
    </style>
    
    <style name="Widget.Mentora.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIcon">@color/black</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.Mentora.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    
    <style name="TextAppearance.Mentora.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    
    <style name="TextAppearance.Mentora.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    
    <style name="TextAppearance.Mentora.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    
    <style name="TextAppearance.Mentora.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    
    <style name="TextAppearance.Mentora.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    
    <style name="TextAppearance.Mentora.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    
    <style name="TextAppearance.Mentora.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>
    
    <style name="TextAppearance.Mentora.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.Mentora.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.Mentora.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MentoraApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryVariant">#FF1744</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowBackground">#000000</item>
        <item name ="android:textColor">#FFFFFF</item>
    </style>

    <style name="RedSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text colors -->
        <item name="android:textColorHint">@color/red</item>

        <!-- Icon tints -->
        <item name="closeIconTint">@color/red</item>

        <!-- EditText style -->
        <item name="android:editTextStyle">@style/RedSearchView.EditText</item>
    </style>
    <style name="RedSearchView.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorHint">@color/red</item>
    </style>

    <style name="SearchView.RedText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorHint">@color/red</item>
    </style>
</resources>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course1Title"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/courseProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/courseProvider1"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey2"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/moduleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courseModule1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/moduleProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moduleProgress"
            android:textColor="@color/grey"
            android:textSize="12sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getBack"
        android:backgroundTint="@color/white"
        android:textColor="#ff3e6b"
        android:layout_gravity="center"
        android:background="@drawable/searchview_border" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/ivModuleIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/module"
        android:src="@android:drawable/ic_menu_view"
        app:tint="@color/colorInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvModuleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivModuleIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Introduction to Android Studio" />

    <TextView
        android:id="@+id/tvModuleDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorSecondaryVariant"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvModuleTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvModuleTitle"
        tools:text="3 lessons â€¢ 45 minutes" />

</androidx.constraintlayout.widget.ConstraintLayout>